//This shader is the pixel(fragment) shader for OpenGL. Made in GLSL

#version 330 core
in vec2 TexCoords;
out vec4 color;

//The texture sampler to use 
uniform sampler2D image;

//Sprite color - usually white
uniform vec3 spriteColor;

void main()
{
	color = vec4(spriteColor, 1.0) * texture(image, TexCoords);
}